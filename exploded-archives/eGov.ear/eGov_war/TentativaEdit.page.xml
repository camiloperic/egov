<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/TentativaList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{tentativaHome.wire}"/>

   <param name="tentativaFrom"/>
   <param name="tentativaId" value="#{tentativaHome.tentativaId}"/>


   <navigation from-action="#{tentativaHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Tentativa.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tentativaHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Tentativa.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tentativaHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/TentativaList.xhtml"/>
      </rule>
   </navigation>

</page>
